#pragma once

namespace FL
{

//----------------------------------------------------------------------------
// ITagPoint
//----------------------------------------------------------------------------

class ITagPoint
{
public:
	virtual _void			SetPosition( const Vector3& position ) = 0;
	virtual const Vector3&	GetPosition( ) const = 0;

	virtual _void			SetDirection( const Vector3& direction ) = 0;
	virtual const Vector3&	GetDirection( ) const = 0;

	virtual _void			SetRotation( const Matrix3& rotation ) = 0;
	virtual const Matrix3&	GetRotation( ) const = 0;
};

};